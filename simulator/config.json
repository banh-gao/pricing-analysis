{
    "simulation" : {
        // seed(s) to initialize PRNGs
        "seed" : [0],

        // resource to allocate
        "resource" : "memory",
        // scale for the resources quantities specified in configuration (MegaBytes)
        "resource_scale" : 1e6,


        // Values based on AWS General purpose T2 medium with size/8

        // resource size distribution in megaBytes
        "size" : [
            {"distribution" : "pareto" , "shape" : 1, "mode" : 500, "int" : 1}
        ],
        // offer value for per single megaByte per year on
        // AWS EU Frankfurt 18/12/2017
        "offer" : {"distribution" : "const", "mean" : 0.47},
        //"offer" : {"distribution" : "const", "mean" : 100},


        // Run simulation as long as the probability of allocating resources is
        // higher than this value
        "halting_threshold": 0.05,
        // application to deploy
        "application" : "alpine",
        // API endpoint
        "endpoint" : "http:\/\/localhost:8080\/api",
        // log file name using configuration parameters
        "output" : "output_{size.mode}_{seed}.csv"
    }
}
