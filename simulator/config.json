{
    "simulation" : {
        // seed(s) to initialize PRNGs
        "seed" : [0, 1],
        // Maximum deployment requests before terminating the simulation
        "max_requests": 20,
        // offer value for per kiloByte
        "offer" : {"distribution" : "const", "mean" : 1},
        // resource to allocate
        "resource" : "memory",
        // resource size distribution in kiloBytes
        "size" : [
            {"distribution" : "pareto" , "shape" : 1, "mode" : 1000e3, "int" : 1}
        ],
        // application to deploy
        "application" : "alpine",
        // API endpoint
        "endpoint" : "http:\/\/localhost:8080\/api",
        // log file name using configuration parameters
        "output" : "output_{size.mode}_{seed}.csv"
    }
}
